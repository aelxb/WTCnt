@model WTCnt.Models.Usr



<h1>@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Логин
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DomenName)
        </dd>
        <dt class = "col-sm-2">
            Пароль
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            Роль
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class = "col-sm-2">
            Фото
        </dt>
        <dd class="col-sm-10">
            @if (Model.Photo != null)
            {
                <div class="image" style="align-content:center">
                    @Html.Raw("<img style='width:100px; height:200px;' src=\"data:image/jpeg;base64,"
                                         + Convert.ToBase64String(Model.Photo) + "\" />")
                </div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Редактировать</a> |
    <a asp-action="Index">Назад</a>
</div>
