@model WTCnt.Models.ProjectsViewModel


<head>
    <link href="~/css/scroll.css" rel="stylesheet" />
</head>
<body>
    <div style="height:490px; width:300px; overflow-y:scroll; border-style:solid; background-color:cornsilk">
        @foreach (var item in Model.messages)
        {
            @if (int.Parse(User.Identities.ToList()[0].Name) != item.User_ID)
            {
                <div style="background-color: #5a3c8d; color:white; border-radius: 15px; margin: 5px; text-align: left ">
                    <label style="vertical-align:central">
                        @Html.Raw("<img style='width:50px; height:50px; border-radius:90px; margin: 3px' alt='photo'  src=\"data:image/jpeg;base64,"
                                                + Convert.ToBase64String(Model.Users.ToList().Find(u => u.ID == item.User_ID).Photo) + "\" />")
                        @item.Text
                    </label>
                </div>
            }
            else
            {
                <div style="background-color: #f08b1b; color: white; border-radius: 15px; margin: 5px; text-align: right ">
                    <label style="vertical-align:central">
                        @item.Text
                        @Html.Raw("<img style='width:50px; height:50px; border-radius:90px; margin: 3px' alt='photo'  src=\"data:image/jpeg;base64,"
                                                + Convert.ToBase64String(Model.Users.ToList().Find(u => u.ID == item.User_ID).Photo) + "\" />")
                    </label>
                </div>
            }
        }
    </div>
</body>