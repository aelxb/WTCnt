@model WTCnt.Models.PpUViewModel

<head>

</head>
<body>
    <h1>Добавление задачи в проект</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <input type="hidden" id="projectID" name="projectID" value="@Model.ProjectID" />
                <div class="form-group" style="text-align:left">
                    <label class="control-label">Задача:</label>
                    <input id="comment" name="comment" class="form-control" />
                </div>
                <div class="form-group" style="text-align:left">
                    <label class="control-label">Сотрудник:</label>
                    <select id="user" name="user" class="form-control">
                        @foreach (var item in Model.Users)
                        {
                            <option value="@item.ID">@item.Name @item.Surname</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" style="background-color: #5a3c8d"/>
                </div>
                <div>
                    <button type="button" class="btn btn-danger" style=" margin: 0px 5px 5px 0px" onclick="location.href='@Url.Action("Index", "Prjects")'">Завершить</button>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}