@model WTCnt.Models.News

<div>
    <h5>@Model.Date.ToShortDateString()</h5>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <h2>@Model.Title</h2>
        </dd>

        @Html.Raw("<img style='width:50%;height:50%; vertical-align:central;' src=\"data:image/jpeg;base64,"
                             + Convert.ToBase64String(Model.Picture) + "\" />")
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Назад</a>
</div>
