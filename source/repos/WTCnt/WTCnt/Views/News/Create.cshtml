@model WTCnt.Models.News

<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/attachfile.css" rel="stylesheet" />
    <link href="~/css/gradient.css" rel="stylesheet" />
</head>
<body>
    <div style="text-align:center">
        <center>
            <h1>Добавить новость</h1>
            <hr />
            <div>
                <div class="col-md-4">
                    @using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" style="text-align:left">
                            <label asp-for="Title" class="control-label">Заголовок:</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="text-align:left">
                            <label asp-for="Text" class="control-label">Текст:</label>
                            <input asp-for="Text" class="form-control" />
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        <div class="example-1">
                            <div class="form-group">
                                <label class="label" style="text-align:center; align-content:center">
                                    <i class="material-icons">attach_file</i>
                                    <span class="title" style="text-align: center; align-content: center">Добавить изображение</span>
                                    <input type="file" class="form-control" name="uploadImage" />
                                </label>
                            </div>
                        </div>
                        <div class="form-group" style="text-align:left">
                            <label asp-for="Division" class="control-label">Для подразделения:</label>
                            <select asp-for="Division" class="form-control">
                                <option value="Программисты">Программисты</option>
                                <option value="Тестировщики">Тестировщики</option>
                                <option value="Все">Все</option>
                            </select>
                            <span asp-validation-for="Division" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" style="background-color:#5a3c8d" value="Добавить" class="btn btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </center>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
